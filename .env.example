# WordPress OpenTelemetry Configuration
# Copy this file to .env and update the values

# Database Configuration
MYSQL_ROOT_PASSWORD=example
MYSQL_USER=wordpress
MYSQL_PASSWORD=Secret5555
MYSQL_DATABASE=wordpress

# WordPress Port
WORDPRESS_PORT=8086

# OpenTelemetry Configuration
OTEL_SERVICE_NAME=wordpress-microfrontend
OTEL_SERVICE_VERSION=1.0.0
OTEL_EXPORTER_OTLP_ENDPOINT=https://otel.nidhun.me
OTEL_EXPORTER_OTLP_TRACES_ENDPOINT=https://otel.nidhun.me/v1/traces
OTEL_EXPORTER_OTLP_METRICS_ENDPOINT=https://otel.nidhun.me/v1/metrics
OTEL_RESOURCE_ATTRIBUTES=service.name=wordpress-microfrontend,service.version=1.0.0

# Microfrontend URLs
PAYPAL_MICROFRONTEND_URL=https://p4l.nidhun.me
SECOND_MICROFRONTEND_URL=https://s8r.nidhun.me

# Cloudflare Tunnel Configuration (for reference)
# s8r.nidhun.me -> localhost:8082 (Second Microfrontend)
# p4l.nidhun.me -> localhost:8084 (PayPal Microfrontend)  
# w7s.nidhun.me -> localhost:8086 (WordPress)
